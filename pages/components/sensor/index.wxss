/* pages/components/sensor/index.wxss */
.sensor {
  display: inline-block;
  width:120px;
  height: 75px;
  border-bottom-right-radius: 4px;
  border-bottom-left-radius:4px;
  font-size: 12px;
}
.sensor-title{
  background-color: #3658D6;
  height: 32px;
  line-height: 32px;
  text-align: center;
  color: #FFF;
  border-top-left-radius: 4px;
  border-top-right-radius:4px;
}
.sensor-main{
  display: flex;
  flex-direction:column;
}
.speed{
  height:32px;
  line-height: 32px;
  background:rgba(232,237,243,0.9);
  border:1px solid #E8EDF3;
  border-bottom: 1px solid #4561B8;
  color: #675E94;
}
.accel{
  height:32px;
  line-height: 32px;
  background:rgba(232,237,243,0.9);
  border:1px solid #E8EDF3;
  border-top:none;
  color: #007D7D;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.speed text{
  padding-left:12px;
}
.accel text{
  padding-left:12px;
}