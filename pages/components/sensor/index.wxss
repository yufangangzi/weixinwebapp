/* pages/components/sensor/index.wxss */
.sensor {
  display: inline-block;
  width:236rpx;
  height: 75px;
  border-bottom-right-radius: 4px;
  border-bottom-left-radius:4px;
  font-size: 18rpx;
}
.sensor-title{
  width:236rpx;
  height:50rpx;
  background:#5878E4;
  border-radius:3px 3px 0px 0px;
  line-height: 50rpx;
  text-align: center;
  font-size: 18rpx;
  font-weight: 400;
  color: #FFF;
  /* border-top-left-radius: 4px;
  border-top-right-radius:4px; */
}
.sensor-main{
  display: flex;
  flex-direction:column;
}
.speed{
  height:50rpx;
  line-height: 50rpx;
  background:linear-gradient(180deg,rgba(255,255,255,0.1) 0%,rgba(255,255,255,0.1) 100%);
  /* border:1px solid #E8EDF3;
  border-bottom: 1px solid #7A9DF9; */
  color:rgba(255,255,255,0.6);
}
.accel{
  height:50rpx;
  line-height: 50rpx;
  background:linear-gradient(180deg,rgba(255,255,255,0.1) 0%,rgba(255,255,255,0.1) 100%);
  /* border:1px solid #E8EDF3;
  border-top:none; */
  color:rgba(255,255,255,0.6);
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  margin-top: 1px;
}
.speed text{
  padding-left:24rpx;
  font-weight: 400;
  line-height: 13px;
}
.accel text{
  padding-left:24rpx;
  font-weight: 400;
  line-height: 13px;
}