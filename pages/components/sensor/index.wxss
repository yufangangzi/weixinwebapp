/* pages/components/sensor/index.wxss */
.sensor {
  display: inline-block;
  width:236rpx;
  height: 75px;
  border-bottom-right-radius: 4px;
  border-bottom-left-radius:4px;
  font-size: 12px;
}
.sensor-title{
  width:236rpx;
  height:50rpx;
  background:rgba(59,90,206,1);
  border-radius:3px 3px 0px 0px;
  line-height: 50rpx;
  text-align: center;
  font-size: 18rpx;
  color: #FFF;
  /* border-top-left-radius: 4px;
  border-top-right-radius:4px; */
}
.sensor-main{
  display: flex;
  flex-direction:column;
}
.speed{
  height:50rpx;
  line-height: 50rpx;
  background:rgba(255,255,255,1);
  border:1px solid #E8EDF3;
  border-bottom: 1px solid #FAFBFD;
  color: #007D7D;
}
.accel{
  height:50rpx;
  line-height: 50rpx;
  background:rgba(255,255,255,1);
  border:1px solid #E8EDF3;
  border-top:none;
  color: #007D7D;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.speed text{
  padding-left:8rpx;
}
.accel text{
  padding-left:8rpx;
}