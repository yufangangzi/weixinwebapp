/* pages/deviceMonitor/index.wxss */
.wux-grid__thumb {
  display:block;
  width:200rpx;
  height:200rpx;
  margin:0 auto;
}


.ub {
  display: flex;
}

.ub-dir{
  flex-direction: column;
}

.ub-f1 {
  flex: 1;
}

.wid {
  width: 180rpx;
}

.ub-pc {
  align-items: center;
}
.ub-ac {
  justify-content: center;
}

.t-bla{
  color: #000;
}

.f30{
  font-size: 60rpx;

}

.box{
  background:linear-gradient(173deg,rgba(95,107,140,1) 0%,rgba(29,35,56,1) 100%);
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.item{
  width:148rpx;
  min-height:160px;
  /* background:linear-gradient(138deg,rgba(98,150,255,1) 0%,rgba(45,78,231,1) 100%); */
  border-radius:2px;
  text-align: center;
  position: relative;
  
}

.rt {
  position: absolute;
  top: 34px;
  right: 5px;
  width: 22px;
  height: 22px;
}

.txt{

  
  height:21px;
  font-size:16px;
  color:rgba(255,255,255,0.6);
  line-height:21px;
  padding-top: 2px;
}

.posrel {
  position: relative;
}

.line-bottom{
  border-bottom: 1px solid rgba(255,255,255,0.1);
  position: absolute;
  left: 20px;
  bottom: 0;
  width: calc(100% - 40px);
  height: 1px;

}

.line-right{
  border-right: 1px solid rgba(255,255,255,0.1);
  position: absolute;
  top: 20px;
  right: 0;
  width: 1px;
  height: 100%;
  /* height: calc(100% - 20px); */
}

.line-right2{
  border-right: 1px solid rgba(255,255,255,0.1);
  position: absolute;
  bottom: 20px;
  right: 0;
  width: 1px;
  height: calc(100% - 20px);
  /* height: calc(100% - 20px); */
}
